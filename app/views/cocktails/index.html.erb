<!-- Navbar -->
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to :cocktails, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item mr-3 ml-3">
        <%= link_to "Home", :cocktails%>
      </li>
      <li class="nav-item mr-3 ml-3">
        <%= link_to "Create a Cocktail", :new_cocktail %>
      </li>
    </ul>
  </div>
</div>
<!-- Banner -->
<div class="banner-container d-flex">
  <%= image_tag "bar.jpg", class:"banner-img" %>
  <div class="container d-flex flex-column justify-content-center">
      <h1>Mister Cocktail</h1>
      <p>The best place to get your favorite coctels!</p>
      <%= link_to "Create a cocktail now!", :new_cocktail, class:"btn btn-ghost" %>
  </div>
</div>

<div class="container-fluid pt-4 pb-4 pl-5" id="title">
  <h1>Your Cocktails!</h1>
</div>

<div class="container-fluid d-flex flex-wrap justify-content-around p-0 mt-4 mb-4" id="card-ema-container">
  <% @cocktails.each do |cocktail|%>
  <% cocktail_img = %w[fire.jpg darkcocktail.jpg cocktail3.jpg cocktail4.jpg cocktail5.jpg] %>
  <div class="card-ema mr-2 ml-2 mt-4">
    <% if cocktail.photo.attached? %>
        <%= cl_image_tag cocktail.photo.key, class:'card-ema-img'%>
      <% else  %>
        <%= image_tag File.exist?("app/assets/images/#{cocktail.name.delete(' ')}.jpg") ? "#{cocktail.name.delete(' ')}.jpg" : cocktail_img.sample , class: 'card-ema-img' %>
    <% end %>
    <%= link_to cocktail_path(cocktail.id) do %>
      <h3><%= cocktail.name %></h3>
    <% end %>
  </div>
  <% end %>
</div>

